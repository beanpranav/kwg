<% if user_signed_in? %>

	<% if current_user.user_type == "researcher" %>
		
		<div class="col-xs-12 col-sm-8 col-sm-offset-2">
			<div class="secondary-nav secondary-nav-invert">
				<i class="fa fa-2x fa-rocket content-list-icon-primary pull-left"></i>
				<h2 class="font-invert"><b>Hi <%= current_user.first_name %>!</b></h2>
				<h3 class="font-invert">You have a researcher account.</h3>
			</div>
	
			<div class="content-container">
				<div class="panel-primary">
	  		  <div class="panel-title">
	  			  Hosted: &nbsp;&nbsp;<%= pluralize( @games_created.count, 'Game' ) %>
	  		  </div>
	  		</div>

	  		<div class="panel-body">

	  			<table class="table table-condensed table-hover">
	  			  <thead>
	  			    <tr>
	  			      <th>Name</th>
	  			      <th>Length</th>
	  			      <th>Type</th>
	  			      <th>Status</th>
	  			      <th colspan="1">Treatment</th>
	  			      <th>Created on</th>
	  			      <th colspan="1"></th>
	  			    </tr>
	  			  </thead>

	  			  <tbody>
	  			    <% @games_created.sort_by(&:created_at).reverse.each.with_index do |game, i| %>
	  			      <tr>
	  			        <td class="one-line-cell"><%= game.id %></td>
	  			        <td><%= game.game_length %></td>
	  			        <td class="one-line-cell"><%= game.game_type %></td>
	  			        <td><%= game.game_status %></td>
	  			        <td><%= game.access_treatement %></td>
	  			        <td><%= game.created_at.strftime("%b %d, %Y") %></td>
	  			        <td><a href="<%= game_path(game) %>"><i class="fa fa-arrow-right"></a></td>
	  			      </tr>
	  			    <% end %>
	  			  </tbody>
	  			</table>

	  			<%= link_to controller: "games", action: "new", user_id: current_user.id do %>
						<div class="center col-sm-6 col-sm-offset-3">
		          <button type="button" class="btn btn-block btn-green">+ ADD GAME</button>
		        </div>
					<% end %>

	  		</div>
			</div>
		</div>
		
	<% else %>
		
		<div class="col-xs-12 col-sm-8 col-sm-offset-2">
			<div class="secondary-nav secondary-nav-invert">
				<i class="fa fa-2x fa-rocket content-list-icon-primary pull-left"></i>
				<h2 class="font-invert"><b>Hi <%= current_user.first_name %>!</b></h2>
				<h3 class="font-invert">As a participant, you have a played <%= pluralize( current_user.games.count, 'game' ) %>.</h3>
			</div>
		
			<%= link_to controller: "games", action: "new", user_id: current_user.id do %>
				<div class="game-card supress-a col-sm-4 row">
					Ready to Play
				</div>
			<% end %>

			<% current_user.games.sort_by(&:created_at).reverse.each do |game| %>
				<a href="<%= game_path(game) %>" class="">
					<div class="game-card supress-a col-sm-4 row">
						game ID: <%= game.id %><br>
						game length: <%= game.game_length %><br>
					</div>
				</a>
			<% end %>
		</div>

	<% end %>

<% else %>
	
	<h2>Welcome Participants!</h2>
	<p>If you already have an account <a href="/login">login here</a>, else <a href="/create_account">create your account</a>.</p>

<% end %>
