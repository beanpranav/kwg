<div class="col-sm-12 col-md-8 col-md-offset-2">
	<div class="secondary-nav secondary-nav-invert">
		<a href="<%= root_path %>"><i class="fa fa-2x fa-home content-list-icon-primary pull-left"></i></a>
		<h2 class="font-invert"><b><%= @study.title %></b></h2>
		<h3 class="font-invert">This study has <%= pluralize( @study.games.count, 'games' ) %>.</h3>
	</div>

	<!-- CURRENT GAMES -->
		<div class="content-container">
			<div class="panel-secondary">
  		  <div class="panel-title">
  			  Current: <%= pluralize( @games_in_progress.count, 'Game' ) %>
  		  </div>
  		</div>

  		<div class="panel-body">

  			<table class="table table-condensed table-hover">
  			  <thead>
  			    <tr>
  			      <th>Created on</th>
  			      <th>Session Name</th>
  			      <th>Codename</th>
  			      <th>MTM Type</th>
  			      <th colspan="1">Condition</th>
  			      <th colspan="1"></th>
  			    </tr>
  			  </thead>

  			  <tbody>
  			    <% @games_in_progress.sort_by(&:created_at).reverse.each.with_index do |game, i| %>
  			      <tr>
  			        <td><%= game.created_at.strftime("%b %d, %Y") %></td>
  			        <td class="one-line-cell"><%= game.session_name %></td>
  			        <td><%= game.game_codename %></td>
  			        <td><%= $GAME_TYPES_LOOKUP[game.game_type][:name] %></td>
  			        <td><%= if game.access_treatement then "Treatment" else "Control" end %></td>
  			        <td class="center <%= if game.game_status > 0 then "panel-green" elsif game.game_status == 0 then "panel-orange" end %>"><a href="<%= game_path(game) %>"><i class="fa fa-arrow-right"></a></td>
  			      </tr>
  			    <% end %>
  			  </tbody>
  			</table>

  			<%= link_to controller: "games", action: "new", study_id: @study.id do %>
					<div class="center col-sm-6 col-sm-offset-3">
	          <button type="button" class="btn btn-block btn-green">+ ADD GAME</button>
	        </div>
				<% end %>

  		</div>
		</div>

	<!-- UNASSIGNED ACTIVE PLAYERS -->
		<% if @active_users.count > 0 %>
			<div class="content-container">
				<div class="panel-secondary">
	  		  <div class="panel-title">
	  			  Unassigned ACTIVE: <%= pluralize( @active_users.count, 'Player' ) %>
	  		  </div>
	  		</div>

	  		<div class="panel-body">

	  			<table class="table table-condensed table-hover">
	  			  <thead>
	  			    <tr>
	  			      <th>Name</th>
	  			      <th>Username</th>
	  			      <th colspan="1"></th>
	  			    </tr>
	  			  </thead>

	  			  <tbody>
	  			    <% @active_users.each do |user| %>
	  			      <tr>
	  			        <td><%= user.player_name %></td>
	  			        <td><%= user.player_screenname %></td>
	  			        <td>
	        	  			<%= form_tag("/inactivate_user", method: :post) do %>
	        	  				<%= hidden_field_tag(:user_id, user.id) %>
	        		        <%= submit_tag "DEACTIVATE", class: "btn btn-sm btn-block btn-red" %>
	        					<% end %>
	  			        </td>
	  			      </tr>
	  			    <% end %>
	  			  </tbody>
	  			</table>

	  		</div>
			</div>
		<% end %>

	<!-- COMPLETED GAMES -->
		<div class="content-container">
			<div class="panel-secondary">
  		  <div class="panel-title">
  			  Completed: <%= pluralize( @games_completed.count, 'Game' ) %>
  		  </div>
  		</div>

  		<div class="panel-body">

  			<table class="table table-condensed table-hover">
  			  <thead>
  			    <tr>
  			      <th>Created on</th>
  			      <th>Session Name</th>
  			      <th>Codename</th>
  			      <th>MTM Type</th>
  			      <th colspan="1">Condition</th>
  			      <th colspan="1"></th>
  			    </tr>
  			  </thead>

  			  <tbody>
  			    <% @games_completed.sort_by(&:created_at).reverse.each.with_index do |game, i| %>
  			      <tr>
  			        <td><%= game.created_at.strftime("%b %d, %Y") %></td>
  			        <td class="one-line-cell"><%= game.session_name %></td>
  			        <td><%= game.game_codename %></td>
  			        <td><%= $GAME_TYPES_LOOKUP[game.game_type][:name] %></td>
  			        <td><%= if game.access_treatement then "Treatment" else "Control" end %></td>
  			        <td><a href="<%= game_path(game) %>"><i class="fa fa-arrow-right"></a></td>
  			      </tr>
  			    <% end %>
  			  </tbody>
  			</table>

  		</div>
		</div>

	<!-- Projects Distribution -->
		<div class="content-container">
			<div class="panel-secondary">
  		  <div class="panel-title">
  			  Distribution of Projects (N)
  		  </div>
  		</div>

  		<div class="panel-body">
  			<table class="table table-condensed table-hover table-bordered center">
  			  <tbody>
  			    <tr>
  			      <td class="table-right-border" style="width:25%;"></td>
  			      <td class="center" style="width:25%;"><b>No Access</b></td>
  			      <td class="center table-right-border" style="width:25%;"><b>Access</b></td>
  			      <td></td>
  			    </tr>

			      <tr>
			        <td class="table-top-border table-right-border"><b>Low MTM variety</b></td>
			        <td class="table-top-border"><%= @pc_lmtm %></td>
			        <td class="table-top-border table-right-border"><%= @pt_lmtm %></td>
			        <td class="table-top-border"><%= @pc_lmtm + @pt_lmtm %></td>
			      </tr>

			      <tr>
			        <td class="table-right-border"><b>High MTM variety</b></td>
			        <td><%= @pc_hmtm %></td>
			        <td class="table-right-border"><%= @pt_hmtm %></td>
			        <td><%= @pc_hmtm + @pt_hmtm %></td>
			      </tr>

			      <tr>
			      	<td class="table-top-border table-right-border"></td>
			      	<td class="table-top-border"><%= @projects_control %></td>
			      	<td class="table-top-border table-right-border"><%= @projects_treatment %></td>
			      	<td class="table-top-border"><b><%= @projects_control + @projects_treatment %></b></td>
			      </tr>
  			  </tbody>
  			</table>
  		</div>
		</div>

	<!-- Profits Distribution -->
		<div class="content-container">
			<div class="panel-secondary">
  		  <div class="panel-title">
  			  Distribution of Profits (DV)
  		  </div>
  		</div>

  		<div class="panel-body">
  			<table class="table table-condensed table-hover table-bordered center">
  			  <tbody>
  			    <tr>
  			      <td class="table-right-border" style="width:25%;"></td>
  			      <td class="center" style="width:25%;"><b>No Access</b></td>
  			      <td class="center table-right-border" style="width:25%;"><b>Access</b></td>
  			      <td></td>
  			    </tr>

			      <tr>
			        <td class="table-top-border table-right-border"><b>Low MTM variety</b></td>
			        <td class="table-top-border">
			        	<%= @pc_lmtm_profits/@pc_lmtm unless @pc_lmtm == 0 %>
			        </td>
			        <td class="table-top-border table-right-border">
			        	<%= @pt_lmtm_profits/@pt_lmtm unless @pt_lmtm == 0 %>
			        </td>
			        <td class="table-top-border">
			        	<%= (@pc_lmtm_profits + @pt_lmtm_profits)/(@pc_lmtm + @pt_lmtm) unless @pc_lmtm + @pt_lmtm == 0 %>
			        </td>
			      </tr>

			      <tr>
			        <td class="table-right-border"><b>High MTM variety</b></td>
			        <td>
			        	<%= @pc_hmtm_profits/@pc_hmtm unless @pc_hmtm == 0 %>
			        </td>
			        <td class="table-right-border">
			        	<%= @pt_hmtm_profits/@pt_hmtm unless @pt_hmtm == 0 %>
			        </td>
			        <td>
			        	<%= (@pc_hmtm_profits + @pt_hmtm_profits)/(@pc_hmtm + @pt_hmtm) unless @pc_hmtm + @pt_hmtm == 0 %>
			        </td>
			      </tr>

			      <tr>
			      	<td class="table-top-border table-right-border"></td>
			      	<td class="table-top-border">
			      		<%= (@pc_lmtm_profits + @pc_hmtm_profits)/@projects_control unless @projects_control == 0 %>
			      	</td>
			      	<td class="table-top-border table-right-border">
			      		<%= (@pt_lmtm_profits + @pt_hmtm_profits)/@projects_treatment unless @projects_treatment == 0 %>
			      	</td>
			      	<td class="table-top-border">
			      		<b><%= (@pc_lmtm_profits + @pc_hmtm_profits + @pt_lmtm_profits + @pt_hmtm_profits)/(@projects_control + @projects_treatment) unless @projects_control + @projects_treatment == 0 %></b>
			      	</td>
			      </tr>
  			  </tbody>
  			</table>
  		</div>
		</div>


<%= link_to 'Edit Study', edit_study_path(@study) %><br>
<%= link_to 'Projects CSV', study_path(@study, content: "project", format: "csv") %><br>
<%= link_to 'Players CSV', study_path(@study, content: "player", format: "csv") %><br>
